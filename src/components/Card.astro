---
const { project } = Astro.props;
const { id, name, description, image, hashtags, link } = project;
---
<div class="max-w-sm bg-white rounded-lg shadow">
    <a href={link.length ? link : null}  target="_blank">
    {image.length ? 
      <img class="rounded-t-lg" src={image} alt={`project #${id}`}> 
      : 
      <div class="flex justify-center p-3 text-accent">No image</div>
    }
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{name}</div>
      <p class="text-dark-gray text-base">
        {description}
      </p>
    </div>
    <div class="px-6 pt-4 pb-2">
      {hashtags.map(tag => (
        <span class="inline-block text-white bg-accent rounded-full px-3 py-1 text-sm font-semibold mr-2 mb-2">
            #{tag}</span>
      ))}
    </div>
    </a>
  </div>